rule "Front Porch Event Reset"
when
	Item FrontPorchEventReset received command ON
then
        logWarn("Bigboxer23", "Front Porch Event Reset")
		FrontPorchRetro.sendCommand(OFF)
		FrontPorchRainbow.sendCommand(OFF)
		FrontPorchThanksgiving.sendCommand(OFF)
end

rule "Front Porch Retro"
when
	Item FrontPorchRetro received command ON
then
		logWarn("Bigboxer23", "Retro")
		FrontPorchEventReset.sendCommand(OFF)
        FrontPorchRainbow.sendCommand(OFF)
        FrontPorchThanksgiving.sendCommand(OFF)
		Thread::sleep(1000)
		SmartFrontPorch.sendCommand(receivedCommand)
end

rule "Front Porch Rainbow"
when
	Item FrontPorchRainbow received command ON
then
		logWarn("Bigboxer23", "Rainbow")
		FrontPorchEventReset.sendCommand(OFF)
		FrontPorchRetro.sendCommand(OFF)
        FrontPorchThanksgiving.sendCommand(OFF)
		Thread::sleep(1000)
		logWarn("Bigboxer23", "Rainbow " + FrontPorchRainbow.state)
		SmartFrontPorch.sendCommand(receivedCommand)
end

rule "Front Porch Thanksgiving"
when
	Item FrontPorchThanksgiving received command ON
then
		logWarn("Bigboxer23", "Thanksgiving")
		FrontPorchEventReset.sendCommand(OFF)
		FrontPorchRetro.sendCommand(OFF)
        FrontPorchRainbow.sendCommand(OFF)
		Thread::sleep(1000)
		SmartFrontPorch.sendCommand(receivedCommand)
end