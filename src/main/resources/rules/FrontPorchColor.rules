rule "Front Porch Event Reset"
when
	Item FrontPorchEventReset received command OFF
then
        logWarn("Bigboxer23", "Front Porch Event Reset")
		IsRetro.sendCommand(OFF)
end

rule "Front Porch Retro"
when
	Item FrontPorchRetro received command ON
then
		FrontPorchEventReset.sendCommand(OFF)
		logWarn("Bigboxer23", "Retro")
		IsRetro.sendCommand(receivedCommand)
		SmartFrontPorch.sendCommand(receivedCommand)
end

rule "Front Porch Rainbow"
when
	Item FrontPorchRainbow received command ON
then
		FrontPorchEventReset.sendCommand(OFF)
		logWarn("Bigboxer23", "Rainbow")
		IsRainbow.sendCommand(receivedCommand)
		SmartFrontPorch.sendCommand(receivedCommand)
end