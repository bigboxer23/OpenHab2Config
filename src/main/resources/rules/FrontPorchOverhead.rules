val aName = "Front Porch Overhead"
rule "Front Porch Overhead"
when
	Item FrontPorchOverhead received command
then
		var Number brightness = receivedCommand;
        logWarn("Bigboxer23", aName + ": " + brightness)

        if (IsRetro.state == ON)
        {
			FrontPorch1.sendCommand(new HSBType(new DecimalType(10), new PercentType(73), new PercentType((brightness.floatValue() * (87f / 100f)).intValue())))
	        FrontPorch2.sendCommand(new HSBType(new DecimalType(29), new PercentType(48), new PercentType((brightness.floatValue() * (91f / 100f)).intValue())))
	        FrontPorch3.sendCommand(new HSBType(new DecimalType(37), new PercentType(24), new PercentType((brightness.floatValue() * (94f / 100f)).intValue())))
	        FrontPorch4.sendCommand(if(brightness == 55) 100 else brightness)
	        FrontPorch5.sendCommand(new HSBType(new DecimalType(155), new PercentType(18), new PercentType((brightness.floatValue() * (67f / 100f)).intValue())))
	        FrontPorch6.sendCommand(new HSBType(new DecimalType(183), new PercentType(43), new PercentType((brightness.floatValue() * (53f / 100f)).intValue())))
	        FrontPorch7.sendCommand(new HSBType(new DecimalType(227), new PercentType(53), new PercentType((brightness.floatValue() * (34f / 100f)).intValue())))
        } else {
	        var HSBType WARM_LIGHT_HSB = new HSBType(new DecimalType(44), new PercentType(65), new PercentType(brightness.intValue()));
	        FrontPorch1.sendCommand(WARM_LIGHT_HSB)
	        FrontPorch2.sendCommand(WARM_LIGHT_HSB)
	        FrontPorch3.sendCommand(WARM_LIGHT_HSB)
	        FrontPorch5.sendCommand(WARM_LIGHT_HSB)
	        FrontPorch6.sendCommand(WARM_LIGHT_HSB)
	        FrontPorch7.sendCommand(WARM_LIGHT_HSB)
        }



end