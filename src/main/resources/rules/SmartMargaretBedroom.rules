rule "Smart Margaret Room Rule"
when
	Item SmartMargaretBedroom received command
then
	logWarn("Bigboxer23", "Smart Margaret: " + receivedCommand + " " + now.getHourOfDay + " " + MargaretLight.state)
	if (receivedCommand == OFF)
	{
		MargaretLight.sendCommand(receivedCommand);
		if (now.getHourOfDay >= 7 && now.getHourOfDay < 19)
		{
			MargaretFan.sendCommand(receivedCommand);
			MaggieLamp.sendCommand(receivedCommand);
			MargaretsAccent.sendCommand(receivedCommand);
		} else
		{
			MaggieLamp.sendCommand(new HSBType(new DecimalType(307),new PercentType(82),new PercentType(5)))
			MargaretsAccent.sendCommand(new HSBType(new DecimalType(307),new PercentType(82),new PercentType(5)))
		}
	} else
	{
		if (now.getHourOfDay >= 7 && now.getHourOfDay < 19)
		{
			if (receivedCommand == ON)
			{
				MargaretLight.sendCommand(100);
			} else
			{
				MargaretLight.sendCommand(receivedCommand);
			}
		} else
		{
			if (receivedCommand == ON)
			{
				MargaretFan.sendCommand(receivedCommand);
				MaggieLamp.sendCommand(new HSBType(new DecimalType(82),new PercentType(56),new PercentType(100)))
				MargaretsAccent.sendCommand(new HSBType(new DecimalType(82),new PercentType(56),new PercentType(100)))
			} else
			{
				MaggieLamp.sendCommand(new HSBType(new DecimalType(82),new PercentType(56),new PercentType(receivedCommand.toString)))
				MargaretsAccent.sendCommand(new HSBType(new DecimalType(82),new PercentType(56),new PercentType(receivedCommand.toString)))
			}
		}
	}
end